alias gst='git status'
alias ggpush='git push origin $(git rev-parse --abbrev-ref HEAD)'
alias ggpull='git pull origin $(git rev-parse --abbrev-ref HEAD)'
alias ggpnp='ggpull && ggpush'
alias gco="git for-each-ref --format='%(refname:short)' refs/heads | fzf | xargs git checkout"
alias gb='git branch'
alias commit='git commit -am'
alias nrw='npm run watch'
alias p3='python3'
alias extra='exa -blhT --git'
alias upd='docker-compose down; docker-compose up -d'
alias woman='man'
alias l='ls -a'
alias ll='ls -lahg'
alias dg='ddgr -n 5'
alias abort='git reset --hard; git rebase --abort'
alias jj='javascripting'
alias dnp='disable-now-playing'


# suffix aliass for file extension handling
alias -s {html,js,css,md,txt}=code
alias -s git="git clone"

# vim shortcuts
# =============
alias v='nvim'
alias n='nvim'
alias vim='nvim'

# tmux session aliases
alias loc='tmux attach -t localizer'
alias leaf='tmux attach -t treefingers'
alias shh='tmux attach -t shuttle'
